.ticket__main
  overflow-x hidden
  position relative
  text-align center
  z-index: 0
  & .ttl--3
    margin 0 auto
    max-width 40rem
    width 90vw

.ticketEvent
  padding 3vh 3vw 1vh 3vw
  margin 4vh 0
  &__info
    text-align left
    margin 2vh auto 0 auto
    max-width 40rem
    width 90vw
    &__name
      font-size 120%
      padding-left 1rem

+ls()
  .ticketEvent
    margin 5vh 0
    &__info
      margin 3vh auto 0 auto
