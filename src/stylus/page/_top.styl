.top__main
  text-align center

.hero
  width 100vw
  height 100vh
  position relative
  z-index -1
  & img.hero_icon1
    width 100%
    padding-top: 30rem
  & img.hero_icon2
    height: 10%
    width: auto
  &__msg
    font-size 8vw
    left 50%
    position absolute
    top 10rem
    transform translateX(-50%)
    width 100vw
  &__scroll

    font-size: 3vw

.triangle
  bottom 5rem
  border-top: 1.5rem solid c-txt-1
  border-right: 1rem solid transparent
  border-left: 1rem solid transparent
  height: 0rem
  right: 50%
  transform translate(-50%, -50%)
  width: 0rem
  position: absolute

.topAbout
  padding 3vw

.topCloudFunding
  padding 0 3vw 3vw

.topLogo
  width 20%

+ls()
  .hero
    &__msg
      top 2rem
