.top__main
  text-align center

.hero
  width 100vw
  height 100vh
  position relative
  z-index -1
  & img.hero_icon
    height 100%
    object-fit cover
    width 100%
    padding-left: 10rem
  &__msg
    font-size 8vw
    left 50%
    position absolute
    top 10rem
    transform translateX(-50%)
    width 100vw

.topAbout
  padding 3vw

.topCloudFunding
  padding 0 3vw 3vw

.topLogo
  width 20%

+ls()
  .hero
    &__msg
      top 2rem
