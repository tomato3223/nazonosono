.top__main
  text-align center

.hero
  height 100vh
  overflow-x hidden
  position relative
  width 100vw
  z-index -1
  &__msg
    font-size 4.5vw
    letter-spacing: 0.7rem
    line-height: 5vh
    padding-left 1rem
    position relative
    text-align left
    top 25%
    transform translateY(-50%)
    width 100vw
  & img.hero__sensu
    left: 70%
    position: absolute;
    top: 55%
    transform translate(-50%, -50%)
    width 220%
    z-index -1
  & img.hero__logoLarge
    bottom: 10rem
    height: 10%
    left: 50%
    position: absolute;
    transform translateX(-50%)
    width: auto
  &__scroll
    bottom 4rem
    font-size: 3.5vw
    left: 50%
    margin: 1rem auto
    position: absolute;
    transform translateX(-50%)

.triangle
  bottom 2rem
  border-left: 1rem solid transparent
  border-right: 1rem solid transparent
  border-top: 1.5rem solid c-txt-1
  height: 0
  left: 50%
  position: absolute
  transform translate(-50%, -50%)
  width: 0

.topAbout
  padding 3vw

.topCloudFunding
  padding 0 3vw 3vw

.topLogo
  width 20%

+ls()
  .hero
    &__msg
      font-size 2vw
      letter-spacing: 1rem
      line-height: 8vh
      padding-left 2rem
