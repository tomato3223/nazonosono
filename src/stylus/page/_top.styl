.top__main
  overflow-x hidden
  position relative
  text-align center
  z-index: 0

.hero
  position relative
  z-index -5
  &__msg
    font-size 4.5vw
    letter-spacing: 0.7rem
    line-height: 5vh
    padding-left 1rem
    position relative
    text-align left
    top 20%
    transform translateY(-50%)
  & img.hero__sensu
    left: 70%
    position: absolute;
    top: 45%
    transform translate(-50%, -50%)
    width 220%
    z-index -5
  & img.hero__logoLarge
    bottom: 15%
    height: 10%
    left: 50%
    position: absolute;
    transform translate(-50%, -50%)
    width: auto
  &__scroll
    bottom 3rem
    cursor pointer
    left: 50%
    position: absolute;
    z-index -1
    &__txt
      font-size: 2.5vw
      margin .5rem auto
      transform translateX(-50%)
    &__triangle
      border-left: 0.5rem solid transparent
      border-right: 0.5rem solid transparent
      border-top: 0.75rem solid c-txt-1
      height: 0
      transform translateX(-50%)
      width: 0

.topAbout
  padding 3vw

.topCloudFunding
  padding 0 3vw 3vw

.topLogo
  width 20%

+ls()
  .hero
    &__msg
      font-size 2vw
      letter-spacing: 1rem
      line-height: 8vh
      padding-left 2rem
    & img.hero__sensu
      left: 80%
      position: absolute;
      top: 50%
      width 120%
