.top__main
  text-align center

.hero
  height 100vh
  overflow-x hidden
  position relative
  width 100vw
  z-index -1
  & img.hero_icon1
    bottom: 20rem
    left: 70%
    position: absolute;
    transform translateX(-50%)
    width 220%
    z-index -1
  & img.hero_icon2
    bottom: 16rem
    height: 10%
    left: 50%
    position: absolute;
    transform translateX(-50%)
    width: auto
  &__msg
    font-size 4.5vw
    letter-spacing: 0.7rem
    line-height: 5rem
    position absolute
    text-align left
    top 15rem
    width 100vw
  &__scroll
    bottom 4rem
    font-size: 3.5vw
    left: 50%
    position: absolute;
    transform translateX(-50%)

.triangle
  bottom 2rem
  border-left: 1rem solid transparent
  border-right: 1rem solid transparent
  border-top: 1.5rem solid c-txt-1
  height: 0
  left: 50%
  position: absolute
  transform translate(-50%, -50%)
  width: 0

.topAbout
  padding 3vw

.topCloudFunding
  padding 0 3vw 3vw

.topLogo
  width 20%

+ls()
  .hero
    &__msg
      top 2rem
