.top__main
  text-align center

.hero
  width 100vw
  height 100vh
  position relative
  z-index -1
  & img.hero_icon1
    width 100%
    padding-top: 30rem
  & img.hero_icon2
    height: 10%
    width: auto
  &__msg
    font-size 4.5vw
    letter-spacing: 0.8rem
    line-height: 7rem
    position absolute
    text-align left
    top 20rem
    width 100vw
  &__scroll
    font-size: 3vw


.triangle
  bottom 5rem
  border-top: 1.5rem solid c-txt-1
  border-right: 1rem solid transparent
  border-left: 1rem solid transparent
  height: 0rem
  left: 50%
  transform translate(-50%, -50%)
  width: 0rem
  position: absolute

.topAbout
  padding 3vw

.topCloudFunding
  padding 0 3vw 3vw

.topLogo
  width 20%

+ls()
  .hero
    &__msg
      top 2rem
