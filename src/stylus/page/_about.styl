.about__main
  overflow-x hidden
  position relative
  text-align center
  z-index: 0
  & .ttl--3
    margin 0 auto
    max-width 40rem
    width 90vw

.aboutEvent
  padding 3vh 3vw 1vh 3vw
  margin 4vh 0
  &__sentence
    text-align left
    margin 2vh auto 0 auto
    max-width 40rem
    width 90vw


.aboutStaff
  padding 3vh 3vw 1vh 3vw
  &__item
    margin 5vh 0 8vh 0
    &__intro
      padding 1rem
      text-align left
    &__name
      font-size: 130%
  & img
    width 7rem

+ls()
  .aboutEvent
    margin 5vh 0
    &__sentence
      text-align left
      margin 3vh auto 0 auto

  .aboutStaff
    & img
      width 8%
