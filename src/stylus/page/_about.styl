.about__main
  overflow-x hidden
  position relative
  text-align center
  z-index: 0

.icon_staff
  width 22%

.topIcon
  padding-top 7rem

.about_event
  padding 3vh 3vw 3vh 3vw
  & .event
    background-color c-white
    border 0.2rem solid c-txt-1
    border-radius 4%
    margin 5vh auto 0 auto
    max-width 40rem
    padding 2.5rem 1rem 2.5rem
    width 90vw

.about_staff
  padding 3vh 3vw 1vh 3vw
  & .staff
    margin 5vh 0 8vh 0
  & .staffName
    font-size: 130%

+ls()
  .icon_staff
    width 8%
  .ttl--3
    margin-left 32vw
