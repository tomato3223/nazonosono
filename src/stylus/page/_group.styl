.group__main
  overflow-x hidden
  position relative
  text-align center
  z-index: 0

.groupContents
  padding 4vh 3vw 0 3vw
  &__wrap
    margin 0 auto
    max-width 40rem
    padding 0 6rem 0 1rem
    width 90vw
    &.two
      padding 0 0 0 1rem
  &__number
    background-color c-txt-1
    color c-white
    display block
    font-size 120%
    width 7rem
  &__name
    font-size 150%
    font-weight 500
    letter-spacing 0.2rem
    text-align left
  &__icon
    position relative
    text-align right
    top -9.5rem
    & img
      width 6rem
  & .hukidashi
    position relative
    top -7rem
  &__intro
    padding 1rem
    text-align left

+ls()
  .groupContents
    padding 8vh 3vw 0 3vw
    &__wrap
      max-width 45rem
    &__number
      font-size 130%
      width 8rem
    &__name
      font-size 160%
    &__icon
      top -12rem
      & img
        width 10rem
    & .hukidashi
        max-width 45rem
