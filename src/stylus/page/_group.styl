.group__main
  overflow-x hidden
  position relative
  text-align center
  z-index: 0
  & .topIcon
    padding-top 7rem

.groupContents
  padding 4vh 3vw 0 3vw
  &__number
    background-color c-txt-1
    color c-white
    display block
    font-size 120%
    left calc(50% - 15rem)
    position relative
    width 7rem
  &__groupName
    font-size 150%
    font-weight 500
    left calc(50% - 15rem)
    letter-spacing 0.2rem
    position relative
    text-align left
  &__groupIcon
    left 10rem
    position relative
    top -9.5rem
    width 8rem
  &__info
    margin-top 3rem
  & .hukidashi
    position relative
    top -7rem

+ls()
  .groupContents
    padding 8vh 3vw 0 3vw
    &__number
      font-size 130%
      left calc(50% - 20rem)
      width 8rem
    &__groupName
      font-size 160%
      left calc(50% - 20rem)
    &__groupIcon
      left 12rem
      top -12rem
      width 10rem
    & .hukidashi
        max-width 45rem
