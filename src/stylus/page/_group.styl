.group__main
  overflow-x hidden
  position relative
  text-align center
  z-index: 0

.topIcon
  width 20%

.groupContents
  padding 5vh 3vw
  &__number
    background-color c-txt-1
    color c-white
    font-size 1.5rem
    margin 1rem
    width 5rem
  &__groupName
    font-size 2.2rem
    font-weight 500
    letter-spacing 0.2rem
    margin 2rem 1rem
    text-align left
    width 18rem
  &__groupIcon
    left 10rem
    position relative
    top -10rem
    width 7rem
  & .hukidashi
    position: relative
    top -10rem
