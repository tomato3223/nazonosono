.group__main
  overflow-x hidden
  position relative
  text-align center
  z-index: 0
  & .topIcon
    padding-top 7rem

.groupContents
  padding 4vh 3vw 0 3vw
  &__wrap
    margin 0 auto
    max-width 40rem
    padding 0 6rem 0 1rem
    width 90vw
  &__number
    background-color c-txt-1
    color c-white
    display block
    font-size 120%
    width 7rem
  &__groupName
    font-size 150%
    font-weight 500
    letter-spacing 0.2rem
    text-align left
  &__groupIcon
    position relative
    text-align right
    top -9.5rem
    & img
      width 6rem
  &__info
    margin-top 3rem
  & .hukidashi
    position relative
    top -7rem

+ls()
  .groupContents
    padding 8vh 3vw 0 3vw
    &__wrap
      max-width 45rem
    &__number
      font-size 130%
      width 8rem
    &__groupName
      font-size 160%
    &__groupIcon
      top -12rem
      & img
        width 10rem
    & .hukidashi
        max-width 45rem
