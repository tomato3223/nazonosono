.group__main
  overflow-x hidden
  position relative
  text-align center
  z-index: 0

.topIcon
  width 20%
  padding-top 7rem

.groupContents
  padding 4vh 3vw 0 3vw
  &__number
    background-color c-txt-1
    color c-white
    display block
    font-size 1.5rem
    margin 1rem 0 1rem 1rem
    width 4.3rem
  &__groupName
    font-size 2.2rem
    font-weight 500
    letter-spacing 0.2rem
    margin 2rem 0 2rem 1rem
    text-align left
    width 18rem
  &__groupIcon
    left 10rem
    position relative
    top -9.5rem
    width 6rem
  &__info
    margin-top 3rem
  & .hukidashi
    position relative
    top -7rem

+ls()
  .topIcon
    width 8%
  .groupContents
    padding 8vh 3vw 0 3vw
    &__number
      font-size 2rem
      margin-left 49rem
      width 6rem
    &__groupName
      font-size 2.5rem
      margin-left 49rem
      width 20rem
    &__groupIcon
      left 13rem
      top -9.5rem
      width 8rem
    & .hukidashi
        max-width 45rem
