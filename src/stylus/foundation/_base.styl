html
  font-size: 62.5%

body
  background-image: url(imgPath+"/common/kamigata_haikei_sp.jpg")
  background-repeat: repeat
  color: c-txt-1
  font-family: 'Roboto', 'Noto Sans JP', sans-serif;
  font-size: 1.4rem
  font-weight: 400
  letter-spacing: 0.05em
  line-height: 3.0rem
  margin: 0

+tb()
  body
    font-size: 1.6rem

+pc()
  body
    font-size: 1.6rem
    letter-spacing: 0.1em

*
  float: none
  position: static

a
  color: inherit
  text-decoration: none
  &:hover
    color c-gray
img
  width: 100%

li
  list-style: none

.progress
  background-color c-bg-1
  inset: 0
  position: absolute;
  z-index: 9999
  &.visited
    display: none
  &__bar
    background-color c-navy
    height: 1rem
    inset: 0
    margin auto
    position fixed
    width: 70vw
    &__now
      background-color c-red
      height 100%
      position absolute
      top: 0
      width 0

+ls()
  .progress
    &__bar
      width 40vw

::selection
  color: c-bg-1
  background-color: c-txt-1
::moz-selection
  color: c-bg-1
  background-color: c-txt-1

::-webkit-scrollbar
  background-color c-navy
::-webkit-scrollbar-thumb
  background-color c-red
