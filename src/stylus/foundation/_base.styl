html
  font-size: 62.5%

body
  color: c-txt-1
  font-family: 'Roboto', 'Noto Sans JP', sans-serif;
  font-size: 1.6rem
  font-weight: 500
  letter-spacing: 0.1em
  line-height: 3.5rem
  margin: 0
  background-image: url(imgPath+"/common/kamigata_haikei_sp.jpg")
  background-repeat: repeat-y


+tb()
  body
    font-size: 1.6rem

+pc()
  body
    font-size: 1.6rem
    letter-spacing: 0.1em

*
  float: none
  position: static

a
  color: inherit
  text-decoration: none
  &:hover
    color c-gray
img
  width: 100%

li
  list-style: none


::selection
  color: c-bg-1
  background-color: c-txt-1
::moz-selection
  color: c-bg-1
  background-color: c-txt-1
