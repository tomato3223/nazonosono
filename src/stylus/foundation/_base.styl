html
  font-size: 62.5%

body
  background-color: c-bg-3
  color: c-txt-1
  font-family: 'Roboto', 'Noto Sans JP', sans-serif;
  font-size: 1.6rem
  font-weight: 300
  margin: 0


+tb()
  body
    font-size: 1.4rem

+pc()
  body
    font-size: 1.6rem

*
  float: none
  position: static

a
  color: inherit
  text-decoration: none
  &:hover
    color c-theme-1
img
  width: 100%

li
  list-style: none


::selection
  color: c-bg-1
  background-color: c-txt-1
::moz-selection
  color: c-bg-1
  background-color: c-txt-1
