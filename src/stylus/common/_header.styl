.header
  height calc(12px * 2 + 42px)
  position: fixed;
  top: 0

.headerLogo
  margin 1rem 1rem
  & img
    height calc(12px * 2 + 42px)
    position relative
    width auto
    z-index 3

.hamburger
  cursor: pointer;
  display : block;
  height: 42px;
  position: fixed;
  right: 13px;
  text-align: center;
  top: 12px;
  width: 42px;
  z-index: 3;
  & span
    background: c-txt-1;
    display: block;
    height: 2px;
    left: 8px;
    position: absolute;
    transition: 0.3s ease-in-out;
    -webkit-transition: 0.3s ease-in-out;
    -moz-transition: 0.3s ease-in-out;
    width : 25px;
    &:nth-child(1)
      top 10px
    &:nth-child(2)
      top 20px
    &:nth-child(3)
      top 30px
  /* ナビ開いてる時のボタン */
  &.active
    & span
      &:nth-child(1)
        background: c-txt-1;
        left: 8px;
        top: 19px;
        transform: rotate(-45deg);
        -webkit-transform: rotate(-45deg);
        -moz-transform: rotate(-45deg);
      &:nth-child(2),
      &:nth-child(3)
        background: c-txt-1;
        top: 19px;
        transform: rotate(45deg);
        -webkit-transform: rotate(45deg);
        -moz-transform: rotate(45deg);

.hamburgerMenu
  background: c-bg-1;
  color: c-txt-1;
  left: 0;
  opacity: 0;
  position: fixed;
  text-align: center;
  top: 0
  transition: .6s ease;
  visibility: hidden;
  width: 100%;
  z-index: 2;
  & ul
    margin: 0 auto;
    padding: 0;
    margin-top: calc(12px * 2 + 42px)
    width: 100%;
    & li
      list-style-type: none;
      transition: .4s all;
      width: 100%;
      &:last-child
        padding-bottom: 0;
      & a
        border-bottom: 2px solid c-gray
        color: c-txt-1;
        display: inline-block;
        padding 4rem 0 1rem 0
        width 45%

  /* このクラスを、jQueryで付与・削除する */
  &.active
    height 100vh
    opacity: 100;
    visibility: visible;

+ls()
  .hamburgerMenu
    & ul
      & li
        & a
          border-bottom none
          display: inline-block;
          width 15%
          &::after
            border-bottom: 2px solid c-gray
            content ""
            display block
            padding-bottom 1rem
            transition: width .6s;
            width 0
          &:hover::after
            width 100%
