.header
  height headerHeight
  position: fixed;
  top: 0
  z-index: 10

.headerLogo
  margin 0
  padding 1rem
  & img
    height headerHeight - 1rem * 2
    position relative
    width auto

.hamburger
  cursor: pointer;
  display : block;
  height: 4.2rem;
  position: fixed;
  right: 1.3rem;
  text-align: center;
  top: 1.2rem;
  width: 4.2rem;
  z-index: 10;
  & span
    background: c-txt-1;
    display: block;
    height: .2rem;
    left: .8rem;
    position: absolute;
    transition: 0.3s ease-in-out;
    -webkit-transition: 0.3s ease-in-out;
    -moz-transition: 0.3s ease-in-out;
    width : 2.5rem;
    &:nth-child(1)
      top 1rem
    &:nth-child(2)
      top 2rem
    &:nth-child(3)
      top 3rem
  /* ナビ開いてる時のボタン */
  &.active
    & span
      &:nth-child(1)
        background: c-txt-1;
        left: .8rem;
        top: 1.9rem;
        transform: rotate(-45deg);
      &:nth-child(2),
      &:nth-child(3)
        background: c-txt-1;
        top: 1.9rem;
        transform: rotate(45deg);

.hamburgerMenu
  background: c-bg-1;
  color: c-txt-1;
  left: 0;
  opacity: 0;
  position: fixed;
  text-align: center;
  top: 0
  transition: .6s ease;
  visibility: hidden;
  width: 100%;
  z-index: 5;
  & ul
    margin: 0 auto;
    padding: 0;
    margin-top: headerHeight
    width: 100%;
    & li
      list-style-type: none;
      transition: .4s all;
      width: 100%;
      &:last-child
        padding-bottom: 0;
      & a
        border-bottom: 2px solid c-gray
        color: c-txt-1;
        display: inline-block;
        padding 4rem 0 .2rem 0
        width 45%

  /* このクラスを、jQueryで付与・削除する */
  &.active
    height 100vh
    opacity: 100;
    visibility: visible;

+ls()
  .hamburgerMenu
    & ul
      & li
        & a
          border-bottom none
          display: inline-block;
          width 15%
          &::after
            border-bottom: .2rem solid c-gray
            content ""
            display block
            padding-bottom 1rem
            transition: width .6s;
            width 0
          &:hover::after
            width 100%
