.header
  background-color c-red
  position: sticky
  top: 0
  height calc(12px * 2 + 42px)

.headerLogo
  margin 0
  & img
    height calc(12px * 2 + 42px)
    width auto

.hamburger
  background-color: c-navy;
  cursor: pointer;
  display : block;
  height: 42px;
  position: fixed;
  right: 13px;
  text-align: center;
  top: 12px;
  width: 42px;
  z-index: 3;
  & span
    background: #fff;
    display: block;
    height: 2px;
    left: 8px;
    position: absolute;
    transition: 0.3s ease-in-out;
    -webkit-transition: 0.3s ease-in-out;
    -moz-transition: 0.3s ease-in-out;
    width : 25px;
    &:nth-child(1)
      top 10px
    &:nth-child(2)
      top 20px
    &:nth-child(3)
      top 30px

/* ナビ開いてる時のボタン */
.hamburger.active span:nth-child(1) {
  background :#fff;
  left: 8px;
  top: 19px;
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
  -moz-transform: rotate(-45deg);
}

.hamburger.active span:nth-child(2),
.hamburger.active span:nth-child(3) {
  background: #fff;
  top: 19px;
  transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
  -moz-transform: rotate(45deg);
}

.hamburgerMenu
  background: rgba(0,0,0,0.7);
  color: #fff;
  left: 0;
  opacity: 0;
  position: fixed;
  text-align: center;
  top: calc(12px * 2 + 42px);
  transition: opacity .6s ease, visibility .6s ease;
  width: 100%;
  z-index: 2;
  & ul
    margin: 0 auto;
    padding: 0;
    width: 100%;
    & li
      list-style-type: none;
      padding: 0;
      width: 100%;
      transition: .4s all;
      &:last-child
        padding-bottom: 0;
      &:hover
        background :#ddd;
      & a
        color: #fff;
        display: block;
        padding: 2em 0;
        text-decoration :none;

/* このクラスを、jQueryで付与・削除する */
.hamburgerMenu.active
  opacity: 100;
